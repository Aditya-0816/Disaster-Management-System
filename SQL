𝑫𝒂𝒕𝒂𝒃𝒂𝒔𝒆
Create Database Disaster_Management_System;

𝑻𝒂𝒃𝒍𝒆𝒔
𝟏)𝐃𝐞𝐬𝐜𝐫𝐢𝐩𝐭𝐢𝐨𝐧 𝐓𝐚𝐛𝐥𝐞
Create Table Description_Table(
   description_id int primary key,
   description_name varchar,
   disaster_id int);

𝟐)𝐃𝐢𝐬𝐚𝐬𝐭𝐞𝐫 𝐓𝐚𝐛𝐥𝐞
Create Table Disaster_Table(
   Disaster_id int primary key,
   disaster_name varchar,
   disaster_date date,
   cause_of_disaster varchar,
   place_id int,
   disaster_detail varchar,
   time_of_disaster time,
   direct_effect_id int,
   indirect_effect_id int,
   description_id int);

𝟑)𝐏𝐥𝐚𝐜𝐞 𝐓𝐚𝐛𝐥𝐞
Create Table Place_Table(
   place_id int primary key,
   place_name varchar,
   country varchar,
   city varchar,
   state varchar);

𝟒)𝐏𝐞𝐨𝐩𝐥𝐞 𝐓𝐚𝐛𝐥𝐞
Create Table People(
   people_id int primary key,
   people_name varchar,
   people_no varchar,
   save_id int,
   victim_id int,
   family_id int);

𝟓)𝐒𝐚𝐯𝐞 𝐓𝐚𝐛𝐥𝐞
Create Table Save_Table(
   save_id int primary key,
   save_date date
   save_time time,
   save_location varchar,
   details varchar,
   victim_id int,
   disaster_id int,
   rescued varchar);

𝟔)𝐃𝐞𝐚𝐭𝐡 𝐓𝐚𝐛𝐥𝐞
Create Table Death(
   death_no int primary key,
   identified varchar,
   cause_of_death varchar,
   date_of_death date,
   time_of_death time,
   disaster_id int,
   victim_id int);

𝟕)𝐕𝐢𝐜𝐭𝐢𝐦 𝐓𝐚𝐛𝐥𝐞
Create Table Victim(
   victim_id int primary key,
   victim_name varchar,
   injured varchar,
   affected varchar,
   missing varchar,
   gender varchar,
   age int,
   disaster_id int,
   family_id int);

𝟖)𝐅𝐚𝐦𝐢𝐥𝐲 𝐓𝐚𝐛𝐥𝐞
Create Table Family_Table(
   family_id int primary key,
   grandparents int,
   parents int,
   children int,
   compensation_id int,
   requirement varchar,
   dead_family_members int);

𝟗)𝐄𝐜𝐨𝐧𝐨𝐦𝐢𝐜 𝐃𝐚𝐦𝐚𝐠𝐞 𝐓𝐚𝐛𝐥𝐞
Create Table Economic_Damage_Table(
   damage_id int primary key,
   disaster_id int,
   property_damage_amt int,
   agriculture_damage_amt int,
   technical_damage_amt int);

𝟏𝟎)𝐂𝐨𝐦𝐩𝐞𝐧𝐬𝐚𝐭𝐢𝐨𝐧 𝐓𝐚𝐛𝐥𝐞
Create Table Compensation_Table(
   compensation_id int primary key,
   compensation varchar,
   compensation_amount int,
   date_paid int,
   victim_id int);

𝟏𝟏)𝐃𝐢𝐫𝐞𝐜𝐭 𝐄𝐟𝐟𝐞𝐜𝐭𝐬 𝐓𝐚𝐛𝐥𝐞
Create Table Direct_Effects_Table(
   direct_effect_id int primary key,
   disaster_id int,
   description varchar,
   direct_impact_type varchar,
   direct_severity varchar);

𝟏𝟐)𝐈𝐧𝐝𝐢𝐫𝐞𝐜𝐭 𝐄𝐟𝐟𝐞𝐜𝐭𝐬 𝐓𝐚𝐛𝐥𝐞
Create Table Indirect_Effects(
   indirect_effect_id int primary key,
   disaster_id int,
   description varchar,
   indirect_impact_type varchar,
   indirect_severity varchar);
